<div class="row ">

  <h2 class="text-primary"  >Connexion</h2>
  <div class="col-md-6" >
    <img src="https://image.freepik.com/vecteurs-libre/illustration-concept-connexion-mobile_114360-83.jpg" width="50%" alt=""><br>
    <em>Hypnos !</em>
  </div>
  <div class="col-md-6" >
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :email %><br>
        <%= text_field_tag :email,nil, class:'form-control' %>
      </div>
      <div class="form-group mb-3">
        <%= label_tag :password %><br>
        <%= password_field_tag :password,nil, class:'form-control' %>
      </div>
      <div class="form-group">
          <%= submit_tag("Se connecter",:class=>"btn btn-success")  %>
      </div>
    <% end %>
  </div>
</div>